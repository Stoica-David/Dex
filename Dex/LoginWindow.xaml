<Window x:Class="Dex.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Window" Height="300" Width="400"
        DataContext="{Binding Login}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Login" HorizontalAlignment="Left" Margin="176,10,0,23" FontWeight="Bold" Grid.RowSpan="2"/>

        <!-- Username Label and TextBox -->
        <Label Content="Username" Grid.Row="1" HorizontalAlignment="Left" Margin="12,10,0,38" Grid.RowSpan="2"/>
        <TextBox Grid.Row="2" Text="{Binding Username, Mode=TwoWay}" Margin="10" x:Name="usernameBox"
		         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" TextChanged="usernameBox_TextChanged"/>

        <!-- Password Label and PasswordBox -->
        <Label Content="Password" Grid.Row="2" HorizontalAlignment="Left" Margin="12,56,0,-46"/>
        <PasswordBox Grid.Row="2" x:Name="passwordBox" Margin="12,84,8,-64" PasswordChanged="PasswordBox_PasswordChanged"/>

        <!-- Login Button -->
        <Button Content="Login" Command="{Binding LoginCommand}" Grid.Row="2" HorizontalAlignment="Left" Margin="176,0,0,-113" VerticalAlignment="Bottom"/>
    </Grid>
</Window>