<Window x:Class="Dex.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Window" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Search" HorizontalAlignment="Center" Margin="0,2,0,31" FontWeight="Bold" Grid.RowSpan="2"/>

        <!-- Search Bar -->
        <TextBox Grid.Row="1" Margin="10,32,10,-13" x:Name="searchTextBox"/>

        <!-- Search Button -->
        <Button Grid.Row="1" Content="Search" HorizontalAlignment="Center" Margin="0,76,0,-56" Click="SearchButton_Click"/>
    </Grid>
</Window>