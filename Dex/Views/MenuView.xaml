<UserControl x:Class="Dex.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dex.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Administrative" Margin="5" Command="{Binding SwitchToLoginCommand}"/>
	        <Button Content="Search"  Margin="5" Command="{Binding SwitchToSearchCommand}"/>
	        <Button Content="Game" Margin="5" Command="{Binding SwitchToGameCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
